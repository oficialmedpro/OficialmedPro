FROM node:20-alpine

# Instalar curl e git para health checks e versionamento
RUN apk add --no-cache curl git

# Criar diretório da aplicação
WORKDIR /app

# Copiar package.json
COPY package-sync-apis.json package.json

# Instalar dependências
RUN npm install --production

# Copiar arquivo da API
COPY api-sync-opportunities.js index.js

# Copiar .git se existir (para versionamento)
COPY .git .git 2>/dev/null || true

# Criar usuário não-root
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs

# Mudar permissões
RUN chown -R nodejs:nodejs /app
USER nodejs

# Expor porta
EXPOSE 5001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:5001/health || exit 1

# Comando para iniciar
CMD ["node", "index.js"]


